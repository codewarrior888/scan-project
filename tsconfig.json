{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      // "strict": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "ES6",
        "dom"
      ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*", "custom.d.ts",
    ],
}
  